<Window x:Class="BasicIOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BasicIOT.ViewModels"
        Title="Basic IoT Manager" Height="520" Width="900">
    <!-- Create ViewModel instance in XAML and use as DataContext -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Logs at bottom -->
        <ListBox ItemsSource="{Binding Logs}" DockPanel.Dock="Bottom" Height="140" Margin="8"/>

        <!-- Buttons below grid -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="8">
            <Button Content="Add" Command="{Binding AddDeviceCommand}" Width="110" Margin="6"/>
            <Button Content="Update" Command="{Binding UpdateDeviceCommand}" Width="110" Margin="6"/>
            <Button Content="Status" Command="{Binding ToggleStatusCommand}" Width="110" Margin="6"/>
            <Button Content="Delete" Command="{Binding DeleteDeviceCommand}" Width="110" Margin="6"/>
        </StackPanel>

        <!-- DataGrid: show devices, allow inline edit for Name & Type -->
        <DataGrid ItemsSource="{Binding Devices}"
                  SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="8"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <!-- ID is readonly and auto-generated by ViewModel -->
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="70"/>
                <!-- Two-way bindings allow editing inline -->
                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" IsReadOnly="True" Width="100"/>
                <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat=yyyy-MM-dd HH:mm:ss}" IsReadOnly="True" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
